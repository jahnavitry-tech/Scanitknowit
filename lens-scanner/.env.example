# Environment variables for the Lens Scanner application

# Enable BLIP captioning (requires HF_API_TOKEN)
# Set to true to enable AI image captioning via Hugging Face
USE_BLIP=false

# Enable OpenFoodFacts lookup
# Set to true to enable product database lookup
OPENFOODFACTS=true

# Your Hugging Face API token (required for BLIP captioning)
# Obtain a free token at https://huggingface.co/settings/tokens
# HF_API_TOKEN=your_hugging_face_api_token_here

# Port configuration
PORT=3007

# TensorFlow.js configuration
# Set to true to enable TensorFlow.js (object recognition)
SKIP_MOBILENET=false